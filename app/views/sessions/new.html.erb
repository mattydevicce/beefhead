<div class="container">
	<h1 class="title">Login</h1>

	<%= form_tag '/login' do %>

		<div class="field">
	   <%= label_tag :email %><br>
	   <%= text_field_tag :email %>
	  </div>
	  <div class="field">
	   <%= label_tag :password %><br>
	   <%= password_field_tag :password %>
	  </div>
	  <%= submit_tag "Submit", :class => 'btn btn-large btn-primary' %>

	<% end %>
</div>