<div class="new-user-form">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <br/>


    <div class="field">
      <div class="col-md-5 lab"><%= f.label :name %>:</div> 
      <div class="col-md-3"><%= f.text_field :name %></div>
    </div>
    <br>
    <br>
    <div class="field">
       <div class="col-md-5 lab"><%= f.label :email %>:</div>
       <div class="col-md-3"><%= f.text_field :email %></div>
    </div>
    <br><br>
    <div class="field">
      <div class="col-md-5 lab"><%= f.label :password %>:</div> 
      <div class="col-md-3"><%= f.password_field :password %></div>
    </div>
    <br><br>
    <div class="field">
      <div class="col-md-5 lab"><%= f.label :password_confirmation %>:</div>
      <div class="col-md-3"><%= f.password_field :password_confirmation %></div>
    </div>
    <br><br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>